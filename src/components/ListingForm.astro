<section id="cadastrar" class="py-16 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-c21-grey mb-4">Cadastre seu Imóvel</h2>
        <p class="text-c21-medium-grey">
          Preencha o formulário abaixo e nossa equipe entrará em contato em até 24 horas.
        </p>
      </div>
      
      <div class="bg-white rounded-lg shadow-lg p-8">
        <!-- Property Listing Form -->
        <form id="listing-form" class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Personal Information -->
          <div class="md:col-span-2">
            <h3 class="text-xl font-semibold text-c21-grey mb-4">Dados Pessoais</h3>
          </div>
          
          <div>
            <label for="name" class="block text-sm font-medium text-c21-grey mb-2">Nome Completo</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
              placeholder="Seu nome completo"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-c21-grey mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
              placeholder="seu@email.com"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-c21-grey mb-2">Telefone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
              placeholder="(11) 99999-9999"
            />
          </div>
          
          <div>
            <label for="best-time" class="block text-sm font-medium text-c21-grey mb-2">Melhor horário para contato</label>
            <select 
              id="best-time" 
              name="best-time" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
            >
              <option value="">Selecione</option>
              <option value="morning">Manhã (9h - 12h)</option>
              <option value="afternoon">Tarde (13h - 17h)</option>
              <option value="evening">Noite (17h - 19h)</option>
            </select>
          </div>
          
          <!-- Property Information -->
          <div class="md:col-span-2 mt-6">
            <h3 class="text-xl font-semibold text-c21-grey mb-4">Dados do Imóvel</h3>
          </div>
          
          <div>
            <label for="property-type" class="block text-sm font-medium text-c21-grey mb-2">Tipo de Imóvel</label>
            <select 
              id="property-type" 
              name="property-type" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
            >
              <option value="">Selecione</option>
              <option value="house">Casa</option>
              <option value="apartment">Apartamento</option>
              <option value="land">Terreno</option>
              <option value="commercial">Comercial</option>
            </select>
          </div>
          
          <div>
            <label for="intention" class="block text-sm font-medium text-c21-grey mb-2">Intenção</label>
            <select 
              id="intention" 
              name="intention" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
            >
              <option value="">Selecione</option>
              <option value="sell">Vender</option>
              <option value="rent">Alugar</option>
            </select>
          </div>
          
          <div>
            <label for="address" class="block text-sm font-medium text-c21-grey mb-2">Bairro</label>
            <input 
              type="text" 
              id="address" 
              name="address" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
              placeholder="Nome do bairro"
            />
          </div>
          
          <div>
            <label for="area" class="block text-sm font-medium text-c21-grey mb-2">Área (m²)</label>
            <input 
              type="number" 
              id="area" 
              name="area" 
              required
              class="w-full px-4 py-3 rounded border border-gray-200 focus:border-c21-gold focus:ring focus:ring-c21-gold/20 transition-colors"
              placeholder="Ex: 100"
            />
          </div>
          
          <div class="md:col-span-2">
            <button 
              type="submit"
              class="w-full bg-c21-gold hover:bg-c21-dark-gold text-white font-medium px-6 py-3 rounded transition-colors duration-200"
            >
              Quero Cadastrar meu Imóvel
            </button>
          </div>
          
          <!-- Success Message (Hidden by default) -->
          <div id="form-success-message" class="md:col-span-2 mt-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800 hidden">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="font-medium">Obrigado! Sua solicitação foi recebida com sucesso.</span>
            </div>
            <p class="mt-2">Um especialista da Century 21 Alpha entrará em contato em até 24 horas para agendar a avaliação gratuita do seu imóvel.</p>
          </div>
          
          <!-- Error Message (Hidden by default) -->
          <div id="form-error-message" class="md:col-span-2 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800 hidden">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <span class="font-medium">Ocorreu um erro ao enviar o formulário. Por favor, tente novamente.</span>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('listing-form');
    const successMessage = document.getElementById('form-success-message');
    const errorMessage = document.getElementById('form-error-message');
    
    if (form) {
      form.addEventListener('submit', async function(event) {
        event.preventDefault();
        
        // Get form data
        const formData = new FormData(event.target);
        const formEntries = Object.fromEntries(formData.entries());
        
        // Get stored UTM parameters
        const utmParameters = window.getStoredUtmParameters ? window.getStoredUtmParameters() : {};

        // Create payload
        const payload = {
          name: formEntries.name || '',
          email: formEntries.email || '',
          phone: formEntries.phone || '',
          bestTime: formEntries['best-time'] || '',
          propertyType: formEntries['property-type'] || '',
          intention: formEntries.intention || '',
          address: formEntries.address || '',
          area: formEntries.area || '',
          source: 'property-listing-form',
          timestamp: new Date().toISOString(),
          ...utmParameters
        };
        
        try {
          // Send data to webhook
          const response = await fetch('https://workflowwebhook.prospectz.com.br/webhook/lp-cadastro-imovel', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(payload)
          });
          
          if (response.ok) {
            // Push to dataLayer for GTM tracking
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({
              'event': 'property_listing_complete',
              'formSource': 'property-listing-form'
            });
            
            // Create and show the confirmation message immediately
            const confirmationMessage = document.createElement('div');
            confirmationMessage.className = 'bg-white rounded-lg shadow-lg p-8 text-center';
            confirmationMessage.innerHTML = `
              <div class="flex flex-col items-center space-y-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mb-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <h3 class="text-xl font-bold text-c21-grey">Obrigado! Sua solicitação foi recebida com sucesso.</h3>
                <p class="text-c21-medium-grey">Um especialista da Century 21 Alpha entrará em contato em até 24 horas para agendar a avaliação gratuita do seu imóvel.</p>
              </div>
            `;
            
            // Replace the form with the confirmation message
            form.parentNode.replaceChild(confirmationMessage, form);
          } else {
            console.error('Error submitting form:', response.statusText);
            // Show error message
            if (errorMessage) {
              errorMessage.classList.remove('hidden');
              
              // Hide error message after 5 seconds
              setTimeout(function() {
                errorMessage.classList.add('hidden');
              }, 5000);
            }
          }
        } catch (error) {
          console.error('Error submitting form:', error);
          // Show error message
          if (errorMessage) {
            errorMessage.classList.remove('hidden');
            
            // Hide error message after 5 seconds
            setTimeout(function() {
              errorMessage.classList.add('hidden');
            }, 5000);
          }
        }
      });
    }
  });
</script>