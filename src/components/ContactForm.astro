<section id="contato" class="py-16 bg-white relative overflow-hidden">
  <div class="container mx-auto px-4 md:px-6">
    <div class="max-w-5xl mx-auto">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="grid md:grid-cols-2">
          <!-- Contact Information -->
          <div class="bg-c21-grey text-white p-8 md:p-10 relative">
            <div class="absolute top-0 right-0 w-40 h-40 bg-c21-gold/20 rounded-full -translate-y-20 translate-x-20"></div>
            <div class="absolute bottom-0 left-0 w-60 h-60 bg-c21-gold/10 rounded-full translate-y-32 -translate-x-32"></div>
            
            <div class="relative z-10">
              <h2 class="text-2xl font-bold mb-6">Informações de Contato</h2>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-c21-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
