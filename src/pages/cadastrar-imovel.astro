---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ListingHero from '../components/ListingHero.astro';
import ListingBenefits from '../components/ListingBenefits.astro';
import ListingProcess from '../components/ListingProcess.astro';
import ListingComparison from '../components/ListingComparison.astro';
import ListingTestimonials from '../components/ListingTestimonials.astro';
import ListingForm from '../components/ListingForm.astro';
import ListingNumbers from '../components/ListingNumbers.astro';
import ListingFAQ from '../components/ListingFAQ.astro';
---

<Layout 
  title="Cadastre seu Imóvel | Century 21 Alpha - Venda ou Alugue com Especialistas"
  description="Cadastre seu imóvel com a Century 21 Alpha. Tenha acesso aos melhores profissionais e à maior rede de compradores em Alphaville e região."
>
  <Header />
  <main>
    <ListingHero />
    <ListingNumbers />
    <ListingBenefits />
    <ListingProcess />
    <ListingComparison />
    {/* <ListingTestimonials /> */}
    <ListingForm />
    <ListingFAQ />
  </main>
  <Footer />
</Layout>

<script>
  // Intersection Observer for animations
  document.addEventListener('DOMContentLoaded', () => {
    const animateElements = document.querySelectorAll('.animate-on-scroll');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { threshold: 0.1 });
    
    animateElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>
